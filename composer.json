    "keywords": [
        "validation-viet-nam",
        "validator-viet-nam",
		"validation-viet",
		"validator-viet"
    ],
    "homepage": "https://github.com/phpviet/validation",
    "license": "MIT",
    "authors": [
        {
            "name": "Vuong Xuong Minh",
            "email": "vuongxuongminh@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "respect/validation": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "PHPViet\\Validation\\": "src"
        }
